{
  "name": "@sixthkind/axiom",
  "author": "sixthkind",
  "version": "0.2.1",
  "private": true,
  "workspaces": [
    "app",
    "pocketbase"
  ],
  "scripts": {
    "start": "concurrently \"npm start --workspace=app\" \"npm start --workspace=pocketbase\"",
    "build": "npm run generate --workspace=app",
    "tag": "git tag $npm_package_version && git push origin $npm_package_version",
    "version": "echo $npm_package_name v$npm_package_version",
    "env": "source .env.production && scp ./.env.production root@$SERVER_IP:/$SERVER_USER/$SERVER_PATH/.env",
    "deploy": "npm run deploy --workspace=pocketbase",
    "all": "npm run generate && npm run cp && npm run pb",
    "cp": "cp -r app/.output/public/* pocketbase/pb_public"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
